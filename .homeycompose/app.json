  "drivers": [
    {
      "id": "enigma2",
      "name": {
        "en": "Enigma2 Receiver"
      },
      "class": "tv",
      "capabilities": [
        "speaker_artist",
        "speaker_track",
        "speaker_position",
        "speaker_duration",
        "channel_down",
        "channel_up",
        "speaker_next",
        "speaker_playing",
        "speaker_prev",
        "volume_set",
        "onoff",
        "volume_down",
        "volume_mute",
        "volume_up"
      ],
      "images": {
        "large": "/drivers/enigma2/assets/images/large.png",
        "small": "/drivers/enigma2/assets/images/small.png"
      },
      "settings": [
        {
          "id": "settingIPAddress",
          "type": "text",
          "label": {
            "en": "IP Address"
          },
          "value": "192.168.1.10",
          "hint": {
            "en": "Enter the IP address of your Enigma2 receiver."
          }
        },
        {
          "id": "settingPort",
          "type": "number",
          "label": {
            "en": "Port"
          },
          "value": 80,
          "hint": {
            "en": "Enter the port number to connect to your Enigma2 receiver."
          }
        },
        {
          "id": "settingUsername",
          "type": "text",
          "label": {
            "en": "Username"
          },
          "value": "",
          "hint": {
            "en": "Enter the username for your Enigma2 receiver, if applicable."
          }
        },
        {
          "id": "settingPassword",
          "type": "password",
          "label": {
            "en": "Password"
          },
          "value": "",
          "hint": {
            "en": "Enter the password for your Enigma2 receiver, if applicable."
          }
        }
      ],
      "pair": [
        {
          "id": "start",
          "template": "start.html",
          "navigation": {
            "next": "get_devices"
          }
        },
        {
          "id": "get_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}